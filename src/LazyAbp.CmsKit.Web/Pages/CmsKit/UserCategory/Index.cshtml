@page
@using LazyAbp.CmsKit.Permissions
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using LazyAbp.CmsKit.Web.Pages.CmsKit.UserCategory
@using LazyAbp.CmsKit.Localization
@using LazyAbp.CmsKit.Web.Menus
@model IndexModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<CmsKitResource> L
@inject IAuthorizationService Authorization
@{
    PageLayout.Content.Title = L["UserCategory"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:UserCategory"].Value);
    PageLayout.Content.MenuItemName = CmsKitMenus.UserCategory;
}

@section scripts
{
    <abp-script src="/Pages/CmsKit/UserCategory/index.js" />
}
@section styles
{
    <abp-style src="/Pages/CmsKit/UserCategory/index.css"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["UserCategory"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
			    @if (await Authorization.IsGrantedAsync(CmsKitPermissions.UserCategory.Create))
                {
                <abp-button id="NewUserCategoryButton"
                            text="@L["CreateUserCategory"].Value"
                            icon="plus"
                            button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="UserCategoryTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["UserCategoryName"]</th>
                <th>@L["UserCategoryLevel"]</th>
                <th>@L["UserCategoryParentId"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>